<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TenthActivity">

    <Spinner
        android:id="@+id/countrySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@id/countrySpinner"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Flag" />

    <TextView
        android:id="@+id/capitalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flagImageView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Başkent: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/populationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/capitalTextView"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Nüfus: "
        android:textSize="18sp" />

</RelativeLayout>
